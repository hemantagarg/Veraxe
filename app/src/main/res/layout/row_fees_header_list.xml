<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/textcolordark"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout android:id="@+id/mRlContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mTvTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:paddingLeft="@dimen/dp5"
                android:paddingTop="@dimen/dp4"
                android:paddingRight="@dimen/dp5"
                android:paddingBottom="@dimen/dp4"
                android:text="hh"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                />

            <TextView
                android:id="@+id/text_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTvName"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toLeftOf="@+id/text_date"
                android:paddingLeft="@dimen/dp5"
                android:paddingTop="@dimen/dp5"
                android:text="as"
                android:textColor="@color/text_color_darkgrey"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/mTvCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp10"
                android:paddingLeft="@dimen/dp5"
                android:text=""
                android:textColor="@color/text_color_darkgrey"
                android:textSize="@dimen/text_size_12" />


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/text_name_title"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_invoice_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_toLeftOf="@+id/text_date"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:paddingTop="@dimen/dp4"
                android:text="hh"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_invoice_no"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toLeftOf="@+id/text_date"
                android:paddingLeft="@dimen/dp5"
                android:paddingTop="@dimen/dp5"
                android:text="as"
                android:textColor="@color/text_color_darkgrey"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/mIvDownload"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:layout_below="@+id/text_date"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/mTvPaidAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_total_amount"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text="sa"
                android:textColor="@color/text_color_darkgrey"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp5"
                android:text=""
                android:layout_below="@+id/text_message"
                android:textColor="@color/text_color_darkgrey"
                android:textSize="@dimen/text_size_12" />


        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>